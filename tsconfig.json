{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "#core/*": [
        "packages/core/src/*"
      ],
      "#core": [
        "packages/core/src"
      ],
      "#ui/*": [
        "packages/ui/src/*"
      ],
      "#ui": [
        "packages/ui/src"
      ],
      "#layer": [
        "packages/layer-base"
      ],
      "#layer/*": [
        "packages/layer-base/*"
      ]
    },
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true
  },
  "include": [
    "packages/**/*",
    "apps/**/*"
  ]
}
